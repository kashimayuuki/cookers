<div class="container mt-5">
  <h4>お気に入り一覧</h4>
  <div class="row">
    <div>
      <div class="contents" style="display:flex; flex-wrap:wrap;">
        <% @favorites.each do |favorite| %>
          <div class="mr-4 mt-4">
            <%= link_to menu_path(favorite.menu_id) do %>
              <%= image_tag favorite.menu.image, size:"250x200" %>
            <% end %>
            <p class="text-center"><strong><%= favorite.menu.title %></strong></p>
          </div>
        <% end %>
      </div>
      <p class="text-center"><strong> <%= paginate @favorites %></strong></p>
    </div>
  </div>
</div>