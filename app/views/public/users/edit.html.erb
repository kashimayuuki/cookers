<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ユーザー情報編集</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">名前</label><br>
            <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前"%>
          </div>
          <div class="from-group">
            <label for="user_introduction">紹介文</label><br>
            <%= f.text_area :introduction %>
          </div>
          <div class="text-center">
          <table class="table table-hover">
            <th><%= f.submit "編集内容を保存", class: 'btn btn-success' %></th>
            <th><%= link_to "退会する" , user_unsubscribe_path(current_user), class: 'btn btn-danger' %></th>
          </table>
        </div>
        <% end %>
    </div>

  </div>
</div>