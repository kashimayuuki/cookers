<div class = "container">
  <div class = "row">
    <h3>マイページ</h3>
    <!--ユーザー情報-->
    <table class = 'table table-hover'>
      <tr>
    	  <th>名前</th>
    	  <th><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>紹介文</th>
    	  <th><%= @user.introduction %></th>
      </tr>
    </table>
      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do%>
        <i class="fas fa-user-cog"></i>
      <%end%>
    <table class = "table">
      <!--ユーザー毎の投稿メニュー-->
      <% @user.menus.each do |menu| %>
        <div class="mr-4 mt-4">
          <%= link_to menu_path(menu) do %>
            <%= image_tag menu.image, size:"150x120" %>
          <% end %>
          <p class="text-center"><strong><%= menu.title %></strong></p>
        </div>
      <% end %>
    </table>
  </div>
</div>