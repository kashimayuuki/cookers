<table>
  <tbody>
      <% menu.comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.user.name %>
        </td>
        <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>
        <td>
          <% if comment.user == current_user %>
            <%= link_to "削除", menu_comment_path(comment.menu ,comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>