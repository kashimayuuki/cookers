<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-2'>
      <h3 class="my-4 mt-5">新規登録</h3>
      <%= form_with model:resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless table-sm">
          <div class="field text-center mb-4">
            <%= f.label :"名前（ニックネーム可）",class: "mr-3" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-30" %>
          </div>

          <div class="field text-center mb-4">
            <%= f.label :"メールアドレス",class: "mr-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-30" %>
          </div>

          <div class="field text-center mb-4">
            <%= f.label :"パスワード",class: "mr-3" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "w-30" %>
          </div>

          <div class="field text-center mb-4">
            <%= f.label :"パスワード（確認用）",class: "mr-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-30" %>
          </div>

          <div class="actions text-center mb-4">
            <td><%= f.submit "新規登録",class:"btn btn-primary px-5 mt-4" %></td>
          </div>
        </table>
      <% end %>
      <h4 class="text-right  my-4 mt-5">既に登録済みの方</h4>
      <div class="text-right">
        <%= link_to "こちら", new_user_session_path %>からログインしてください。
      </div>
    </div>
  </div>
</div>

